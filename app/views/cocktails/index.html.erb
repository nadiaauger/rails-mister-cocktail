<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1559443922-3f698a0ff27a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=738&q=80);">
  <div class="container">
    <h1>Best Cocktails in Town !</h1>
    <p>Change your life and learn to drink best cocktails.</p>
    <%= link_to "New Cocktail", new_cocktail_path, class: "btn btn-dark" %>
    <!-- <a class="btn btn-flat" href="#">Apply now</a> -->
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.attached? %>
        <div class="card-category col-sm" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, crop: :fill %>');">
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </div>
      <% else %>
          <div class="card-category col-sm" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1559443922-3f698a0ff27a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=738&q=80);">
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
